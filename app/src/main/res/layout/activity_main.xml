<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mahjabin.userapp.MainActivity">

    <Button
        android:id="@+id/parentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/childButton"
        android:layout_alignBottom="@+id/childButton"
        android:layout_marginEnd="49dp"
        android:layout_toStartOf="@+id/childButton"
        android:text="Parent User"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/childButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="59dp"
        android:text="Child User"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="259dp" />


</RelativeLayout>
