<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mahjabin.userapp.MainActivity">


    <EditText
        android:id="@+id/childFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/childLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/childFirstName"
        android:layout_below="@+id/childFirstName"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/parentFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/childLastName"
        android:layout_below="@+id/childLastName"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Parent's First Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/parentLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/parentFirstName"
        android:layout_below="@+id/parentFirstName"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Parent's Last Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addChildUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:text="Create User" />

    <Button
        android:id="@+id/viewAllChildUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/updateChildUser"
        android:layout_alignBottom="@+id/updateChildUser"
        android:layout_alignParentEnd="true"
        android:text="View/Delete User" />

    <Button
        android:id="@+id/updateChildUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addChildUser"
        android:layout_alignBottom="@+id/addChildUser"
        android:layout_toEndOf="@+id/addChildUser"
        android:text="Update user" />
</RelativeLayout>
